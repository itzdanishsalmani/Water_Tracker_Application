<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment">

    <TextView
        android:id="@+id/settingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="General"
        android:textSize="25sp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/changeGoalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Goal"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/changeWeightEditText"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/intakeGoalEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter new goal"
        android:inputType="numberDecimal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/changeGoalTextView"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/goalConfirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:layout_marginTop="25dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@+id/changeGoalTextView"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/currentWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="current Weight"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/settingTextView"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/currentWeightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="your Weight"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@+id/settingTextView"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/changeWeightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:text="Change Weight"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentWeight" />

    <EditText
        android:id="@+id/changeWeightEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter new weight"
        android:inputType="numberDecimal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/changeWeightTextView"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/weightConfirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:layout_marginTop="25dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@+id/changeWeightTextView"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/changeCupTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="Change Cup Size"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intakeGoalEditText" />

    <EditText
        android:id="@+id/changeCupEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter cup size"
        android:inputType="numberDecimal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/changeCupTextView"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/cupConfirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:layout_marginTop="25dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@+id/changeCupTextView"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
