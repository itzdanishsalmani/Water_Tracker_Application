<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4">

    <TextView
        android:id="@+id/weeklyCompletionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weekly Completion"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendarView"/>

    <TextView
        android:id="@+id/sunday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_border"
        android:text="0%"
        app:layout_constraintTop_toBottomOf="@id/weeklyCompletionTextView"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/monday"/>

    <TextView
        android:id="@+id/sundayBelow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/sunday"
        android:text="SUN"
        android:layout_marginTop="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/monday"/>


    <TextView
        android:id="@+id/monday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%"
        android:background="@drawable/circle_border"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/wednesday"
        app:layout_constraintTop_toBottomOf="@+id/weeklyCompletionTextView"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/mondayBelow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/monday"
        android:text="MON"
        android:layout_marginTop="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/wednesday" />

    <TextView
        android:id="@+id/tuesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%"
        android:background="@drawable/circle_border"
        app:layout_constraintLeft_toRightOf="@id/monday"
        app:layout_constraintRight_toLeftOf="@+id/wednesday"
        app:layout_constraintTop_toBottomOf="@+id/weeklyCompletionTextView"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/tuesdayBelow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TUE"
        app:layout_constraintLeft_toRightOf="@id/monday"
        app:layout_constraintRight_toLeftOf="@+id/wednesday"
        app:layout_constraintTop_toBottomOf="@+id/tuesday"
        android:layout_marginTop="25dp" />

    <TextView
        android:id="@+id/wednesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%"
        android:background="@drawable/circle_border"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weeklyCompletionTextView"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/wednesdayBelow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="WED"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wednesday" />

    <TextView
        android:id="@+id/thursday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%"
        android:background="@drawable/circle_border"
        app:layout_constraintLeft_toRightOf="@+id/wednesday"
        app:layout_constraintRight_toLeftOf="@+id/friday"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/weeklyCompletionTextView"
        />

    <TextView
        android:id="@+id/thursdayBelow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="THR"
        app:layout_constraintLeft_toRightOf="@+id/wednesday"
        app:layout_constraintRight_toLeftOf="@+id/friday"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/thursday" />

    <TextView
        android:id="@+id/friday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%"
        android:background="@drawable/circle_border"
        app:layout_constraintLeft_toRightOf="@id/wednesday"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weeklyCompletionTextView"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/fridayBelow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FRI"
        app:layout_constraintLeft_toRightOf="@id/wednesday"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/friday"
        android:layout_marginTop="25dp" />

    <TextView
        android:id="@+id/saturday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%"
        android:background="@drawable/circle_border"
        app:layout_constraintLeft_toRightOf="@id/friday"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/weeklyCompletionTextView"
        />

    <TextView
        android:id="@+id/saturdayBelow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAT"
        app:layout_constraintLeft_toRightOf="@id/friday"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/saturday"
        />

</androidx.constraintlayout.widget.ConstraintLayout>